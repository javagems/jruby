require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "jruby"

    gem.summary = %Q{A JavaGem version of JRuby - packaged by JavaGems (http://www.javagems.org)}



    gem.description = "A 1.8.5 compatible Ruby interpreter written in 100% pure Java"    

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["pending/unknown"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.4.0"

  

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
